<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="socialnetwork.toysocialnetwork.controller.MainMenuController">
   <children>
      <Label alignment="CENTER" prefHeight="18.0" prefWidth="252.0" text="Welcome, ">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label fx:id="usernameLabel">
         <VBox.margin>
            <Insets bottom="60.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Button fx:id="loadMessagingWindowButton" onAction="#loadMessagingWindow" mnemonicParsing="false" prefHeight="26.0" prefWidth="252.0" text="Messaging Window">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#loadRequestsManagementWindow" prefHeight="26.0" prefWidth="252.0" text="Friend Requests">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#loadFriendsListWindow" prefHeight="26.0" prefWidth="252.0" text="Friends">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#loadLoginWindow" prefHeight="26.0" prefWidth="252.0" text="Log out">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
